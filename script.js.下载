let yesButton = document.getElementById("yes");
let noButton = document.getElementById("no");
let questionText = document.getElementById("question");
let mainImage = document.getElementById("mainImage");

let clickCount = 0;  // 记录点击 No 的次数

// No 按钮的文字变化
const noTexts = [
    "？你必须爱她…", 
    "必须爱阿玥？", 
    "不许选这个！ ", 
    "我会很伤心…", 
    "不行:("
];

// No 按钮点击事件
noButton.addEventListener("click", function() {
    clickCount++;

    // 让 Yes 变大，每次放大 2 倍
    let yesSize = 1 + (clickCount * 1.2);
    yesButton.style.transform = `scale(${yesSize})`;

    // 挤压 No 按钮，每次右移 100px
    let noOffset = clickCount * 50;
    noButton.style.transform = `translateX(${noOffset}px)`;

    // **新增：让图片和文字往上移动**
    let moveUp = clickCount * 25; // 每次上移 20px
    mainImage.style.transform = `translateY(-${moveUp}px)`;
    questionText.style.transform = `translateY(-${moveUp}px)`;

    // No 文案变化（前 5 次变化）
    if (clickCount <= 5) {
        noButton.innerText = noTexts[clickCount - 1];
    }

    // 图片变化（前 5 次变化）
    if (clickCount === 1) mainImage.src = "https://pic1.zhimg.com/100/v2-0c1dc2db760e40a0ffa25a31a4e43aca_r.jpg"; // 震惊
    if (clickCount === 2) mainImage.src = "https://pic1.zhimg.com/100/v2-32e2a48d73e4cbda5eeef3a91ff59550_r.jpg";   // 思考
    if (clickCount === 3) mainImage.src = "https://picx.zhimg.com/100/v2-992fe10d73f55ad6328efda81eb9f65f_r.jpg";   // 生气
    if (clickCount === 4) mainImage.src = "https://picx.zhimg.com/100/v2-a2ef8212231ad4325dfb087875a36335_r.jpg";  // 哭
    if (clickCount >= 5) mainImage.src = "https://picx.zhimg.com/100/v2-a2ef8212231ad4325dfb087875a36335_r.jpg";  // 之后一直是哭

});

// Yes 按钮点击后，进入表白成功页面
yesButton.addEventListener("click", function() {
    document.body.innerHTML = `
        <div class="yes-screen">
            <h1 class="yes-text">!!!真听话!!乖儿子 ( >᎑<)♡︎ᐝ</h1>
            <img src="https://pic2.zhimg.com/100/v2-4d99a96f80c87fde861221f104604879_r.jpg" alt="拥抱" class="yes-image">
        </div>
    `;

    document.body.style.overflow = "hidden";
});
